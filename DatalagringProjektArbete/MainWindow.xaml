<Window x:Class="Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer RenderTransformOrigin="0.0,0.0" Margin="0,0,0,0">
        <ScrollViewer.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.06"/>
                <TranslateTransform/>
            </TransformGroup>
        </ScrollViewer.RenderTransform>
        <Grid Name="MovieGrid" Background="IndianRed" ShowGridLines="True" Width="600" RenderTransformOrigin="0.500,0.500" Height="440">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="22.459" Y="-4.822"/>
                </TransformGroup>
            </Grid.RenderTransform>
            <!-- Tre rader där filmtexten kommer att dyka upp i MainWindow-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="225*"/>
                <RowDefinition Height="209*"/>
            </Grid.RowDefinitions>
            <Button Click="profileClick" Content="Profile" HorizontalAlignment="Left" Margin="-93,15,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.887,-1.015" Width="81" Height="28"/>
            <Button Click="LoggOuteClick" Content="Log out" HorizontalAlignment="Left" Margin="-93,62,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.887,-1.015" Width="81" Height="28"/>
        </Grid>
    </ScrollViewer>



</Window>

