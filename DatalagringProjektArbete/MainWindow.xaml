<Window x:Class="Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer RenderTransformOrigin="0.0,0.0" Margin="0,0,0,0">
        <Grid Name="MovieGrid" Background="IndianRed" ShowGridLines="True" Width="600" RenderTransformOrigin="0.5,0.5" Height="450">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.0"/>
                    <TranslateTransform X="22.407" Y="-4.864"/>
                </TransformGroup>
            </Grid.RenderTransform>
            <!-- Tre rader där filmtexten kommer att dyka upp i MainWindow-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Click="profileClick" Content="Profile" HorizontalAlignment="Left" Margin="-102,24,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.887,-1.015" Width="81" Height="28" Grid.Row="1" Grid.RowSpan="2"/>
            <Button Click="LoggOuteClick" Content="Log out" HorizontalAlignment="Left" Margin="-102,65,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.887,-1.015" Width="81" Height="28" Grid.Row="1" Grid.RowSpan="2"/>
        </Grid>
    </ScrollViewer>



</Window>

