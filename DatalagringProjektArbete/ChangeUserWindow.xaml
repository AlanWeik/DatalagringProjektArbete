<Window x:Class="Store.ChangeUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="ChangeUserName" Height="450" Width="800" WindowStartupLocation="CenterScreen" Foreground="White" Background="Black">
    <Grid>
        <Canvas Margin="276,177,275,176">
            <Label Content="Old Username" Foreground="White" Height="25" Width="212"/>
            <Label Content="New Username" Foreground="White" Height="25" Canvas.Top="28" Width="212" />
            <Button Content="Change" Click="ChangeUserNameButton" Height="22" Canvas.Left="92" Canvas.Top="59" Width="79"/>
            <Button Content="Back" Click="BackToMainButton" Height="22" Canvas.Left="176" Canvas.Top="59" Width="73"/>
            <TextBox x:Name="NewUserName" Height="21" Canvas.Left="92" Canvas.Top="30" Width="157"/>
            <TextBox x:Name="OldUserName" Height="22" Canvas.Left="92" Canvas.Top="3" Width="157"/>
        </Canvas>
    </Grid>
</Window>
