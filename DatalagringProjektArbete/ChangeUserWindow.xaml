<Window x:Class="Store.ChangeUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="ChangeUserName" Height="450" Width="800" WindowStartupLocation="CenterScreen" Foreground="White" Background="Black">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="91" Margin="0,132,0,0" VerticalAlignment="Top">
            <Label Content="Old Username" Width="212" Background="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="New Username" Width="212" Background="White" VerticalAlignment="Top" Margin="0,34,0,0" HorizontalAlignment="Left" />
            <Button Content="Change Username" Click="ChangeUserNameButton" Height="22" Width="141" VerticalAlignment="Top" Margin="0,69,0,0" HorizontalAlignment="Left"/>
            <Button Content="Back" Click="BackToMainButton" Height="22" Width="66" VerticalAlignment="Top" Margin="146,69,0,0" HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</Window>
