<Window x:Class="Store.ChangeUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="ChangeUserName" Height="450" Width="800" WindowStartupLocation="CenterScreen" Foreground="White" Background="Black">
    <Grid>
        <Label Content="Old Username" HorizontalAlignment="Center" Margin="0,143,0,0" VerticalAlignment="Top" Width="212" Foreground="White"/>
        <Label Content="New Username" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" Width="212" Foreground="White" />
        <TextBox Name="OldUserName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="392,147,0,0" Width="147"/>
        <TextBox Name="NewUserName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="392,170,0,0" Width="147"/>
        <Button Content="Change" Click="ChangeUserNameButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="392,192,0,0" Height="22" Width="76"/>
        <Button Content="Back" Click="BackToMainButton" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" Width="66" Margin="473,192,0,0"/>
    </Grid>
</Window>
