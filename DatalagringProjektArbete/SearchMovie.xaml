<Window x:Class="Store.SearchMovie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="Search Movies" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Name="SearchMovieField" HorizontalAlignment="Center" Margin="0,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Text="" TextChanged="SearchMovieField_TextChanged"/>
        <Button Click="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="111,327,0,0" VerticalAlignment="Top" Width="70"/>
        <Button Click="BackButton" Content="Back" HorizontalAlignment="Left" Margin="111,352,0,0" VerticalAlignment="Top" Width="70"/>

    </Grid>
</Window>
